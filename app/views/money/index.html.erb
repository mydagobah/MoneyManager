<% provide(:title, 'Money list') %>
<h1>Listing money</h1>

<% if current_user.money %>
  <table>
    <tr>
      <th>Value</th>
      <th>Description</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% current_user.money.each do |money| %>
    <tr>
      <td><%= money.value %></td>
      <td><%= money.description %></td>
      <td><%= money.created_at %></td>
      <td><%= link_to 'Show', money %></td>
      <td><%= link_to 'Edit', edit_money_path(money) %></td>
      <td><%= link_to 'Destroy', money, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <h3>You don't have any money yet.</h3>
<% end %>
<br />

<%= link_to 'Add New', new_money_path %>
